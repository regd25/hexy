{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Artifacts Schema",
  "description": "Schema for Artifacts Semantic Operations Language files",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "description": "Metadata for the artifacts file",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the artifacts file"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "implemented", "deprecated", "archived"],
          "description": "Current status of the artifacts"
        },
        "author": {
          "type": "string",
          "description": "Author of the artifacts"
        },
        "reviewedBy": {
          "type": "string",
          "description": "Reviewer of the artifacts"
        }
      }
    },
    "Intent": {
      "type": "object",
      "description": "Intent artifact - defines purpose and motivation",
      "properties": {
        "statement": {
          "type": "string",
          "description": "Clear statement of the intent"
        },
        "mode": {
          "type": "string",
          "enum": ["declare", "require", "propose", "prohibit"],
          "description": "Mode of operation"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical", "urgent"],
          "description": "Priority level"
        },
        "measurability": {
          "type": "object",
          "properties": {
            "criteria": {
              "type": "string",
              "description": "Success criteria"
            },
            "metrics": {
              "type": "string",
              "description": "Specific metrics"
            }
          }
        }
      },
      "required": ["statement", "mode", "priority"]
    },
    "Context": {
      "type": "object",
      "description": "Context artifact - defines operational context",
      "properties": {
        "scope": {
          "type": "string",
          "description": "Definition of boundaries and scope"
        },
        "timeframe": {
          "type": "string",
          "description": "Temporal framework of relevance"
        },
        "stakeholders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Involved stakeholders"
        },
        "conditions": {
          "type": "object",
          "properties": {
            "prerequisites": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "assumptions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "constraints": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["scope", "timeframe"]
    },
    "Authority": {
      "type": "object",
      "description": "Authority artifact - defines authority and legitimacy",
      "properties": {
        "actor": {
          "type": "string",
          "description": "Who has the authority"
        },
        "scope": {
          "type": "string",
          "description": "What decisions this authority covers"
        },
        "legitimacy": {
          "type": "string",
          "description": "Legal or organizational basis"
        },
        "decisionBoundaries": {
          "type": "string",
          "description": "Authority limits for decision making"
        },
        "level": {
          "type": "string",
          "enum": ["strategic", "tactical", "operational"],
          "description": "Authority level"
        }
      },
      "required": ["actor", "scope", "legitimacy"]
    },
    "Evaluation": {
      "type": "object",
      "description": "Evaluation artifact - defines success criteria",
      "properties": {
        "expected": {
          "type": "string",
          "description": "Expected result or final state"
        },
        "method": {
          "type": "string",
          "description": "Evaluation method"
        },
        "criteria": {
          "type": "object",
          "properties": {
            "quantitative": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "qualitative": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "thresholds": {
          "type": "object",
          "properties": {
            "excellent": {
              "type": "string"
            },
            "good": {
              "type": "string"
            },
            "acceptable": {
              "type": "string"
            },
            "poor": {
              "type": "string"
            }
          }
        }
      },
      "required": ["expected", "method"]
    },
    "Vision": {
      "type": "object",
      "description": "Vision artifact - strategic declarations",
      "properties": {
        "uses": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "pattern": "^Intent:[A-Z][a-zA-Z0-9]*$"
            },
            "context": {
              "type": "string",
              "pattern": "^Context:[A-Z][a-zA-Z0-9]*$"
            },
            "authority": {
              "type": "string",
              "pattern": "^Authority:[A-Z][a-zA-Z0-9]*$"
            },
            "evaluation": {
              "type": "string",
              "pattern": "^Evaluation:[A-Z][a-zA-Z0-9]*$"
            }
          }
        },
        "aspirationalStatement": {
          "type": "string",
          "description": "Inspiring vision statement"
        },
        "businessImpact": {
          "type": "string",
          "description": "Expected strategic impacts"
        },
        "strategicPillars": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Key pillars supporting the vision"
        },
        "stakeholderValue": {
          "type": "object",
          "description": "Value created for each stakeholder"
        }
      },
      "required": ["uses", "aspirationalStatement"]
    },
    "Policy": {
      "type": "object",
      "description": "Policy artifact - mandatory rules",
      "properties": {
        "uses": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "pattern": "^Intent:[A-Z][a-zA-Z0-9]*$"
            },
            "context": {
              "type": "string",
              "pattern": "^Context:[A-Z][a-zA-Z0-9]*$"
            },
            "authority": {
              "type": "string",
              "pattern": "^Authority:[A-Z][a-zA-Z0-9]*$"
            },
            "evaluation": {
              "type": "string",
              "pattern": "^Evaluation:[A-Z][a-zA-Z0-9]*$"
            }
          }
        },
        "rules": {
          "type": "object",
          "properties": {
            "mandatory": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "prohibited": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "conditional": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "compliance": {
          "type": "object",
          "properties": {
            "monitoring": {
              "type": "string"
            },
            "reporting": {
              "type": "string"
            },
            "exceptions": {
              "type": "string"
            }
          }
        }
      },
      "required": ["uses", "rules"]
    },
    "Process": {
      "type": "object",
      "description": "Process artifact - operational sequences",
      "properties": {
        "uses": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "pattern": "^Intent:[A-Z][a-zA-Z0-9]*$"
            },
            "context": {
              "type": "string",
              "pattern": "^Context:[A-Z][a-zA-Z0-9]*$"
            },
            "authority": {
              "type": "string",
              "pattern": "^Authority:[A-Z][a-zA-Z0-9]*$"
            }
          }
        },
        "actors": {
          "type": "object",
          "properties": {
            "primary": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^Actor:[A-Z][a-zA-Z0-9]*$"
              }
            },
            "support": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^Actor:[A-Z][a-zA-Z0-9]*$"
              }
            },
            "external": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^Actor:[A-Z][a-zA-Z0-9]*$"
              }
            }
          }
        },
        "flow": {
          "type": "object",
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "step": {
                    "type": "number"
                  },
                  "actor": {
                    "type": "string",
                    "pattern": "^Actor:[A-Z][a-zA-Z0-9]*\\s*→\\s*\".*\"$"
                  },
                  "inputs": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "^Actor:[A-Z][a-zA-Z0-9]*\\s*→\\s*\".*\"$"
                    }
                  },
                  "outputs": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "^Actor:[A-Z][a-zA-Z0-9]*\\s*←\\s*\".*\"$"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "required": ["uses", "actors", "flow"]
    },
    "Actor": {
      "type": "object",
      "description": "Actor artifact - subjects that execute actions",
      "properties": {
        "uses": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "pattern": "^Intent:[A-Z][a-zA-Z0-9]*$"
            },
            "context": {
              "type": "string",
              "pattern": "^Context:[A-Z][a-zA-Z0-9]*$"
            },
            "authority": {
              "type": "string",
              "pattern": "^Authority:[A-Z][a-zA-Z0-9]*$"
            }
          }
        },
        "definition": {
          "type": "string",
          "description": "Definition of the actor and its context"
        },
        "responsibilities": {
          "type": "object",
          "properties": {
            "primary": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "secondary": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "required": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "preferred": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "development": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["uses", "definition"]
    }
  },
  "additionalProperties": false
}