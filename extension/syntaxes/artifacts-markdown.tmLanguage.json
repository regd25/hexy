{
  "name": "artifacts-markdown",
  "scopeName": "text.html.markdown.artifacts",
  "scopeNameComment": "Enhanced Syntax highlighting for Artifacts Markdown Operations Documentation (.mdop) files",
  "fileTypes": ["mdop"],
  "patterns": [
    {
      "include": "text.html.markdown"
    },
    {
      "include": "#artifacts-artifacts-in-markdown"
    },
    {
      "include": "#artifacts-references-in-markdown"
    },
    {
      "include": "#artifacts-code-blocks"
    },
    {
      "include": "#artifacts-inline-references"
    },
    {
      "include": "#artifacts-status-indicators"
    }
  ],
  "repository": {
    "artifacts-artifacts-in-markdown": {
      "patterns": [
        {
          "name": "entity.name.type.artifacts.artifact.markdown",
          "comment": "Artifacts Artifact Headers in Markdown",
          "match": "^\\s*([A-Z][a-zA-Z]+)\\s*:",
          "captures": {
            "1": {
              "name": "entity.name.function.artifacts.reference.markdown"
            }
          }
        }
      ]
    },
    "artifacts-references-in-markdown": {
      "patterns": [
        {
          "name": "keyword.control.artifacts.artifact.markdown",
          "comment": "Artifacts References in Markdown Text",
          "match": "\\b(Intent|Context|Authority|Evaluation|Vision|Policy|Concept|Principle|Guideline|Indicator|Process|Procedure|Event|Observation|Result|Actor|Area):([A-Z][a-zA-Z0-9]*)\\b",
          "captures": {
            "1": {
              "name": "entity.name.function.artifacts.reference.markdown"
            },
            "2": {
              "name": "entity.name.function.artifacts.reference.markdown"
            }
          }
        },
        {
          "name": "keyword.control.artifacts.artifact.markdown",
          "comment": "Artifacts References in Code Spans",
          "match": "`\\b(Intent|Context|Authority|Evaluation|Vision|Policy|Concept|Principle|Guideline|Indicator|Process|Procedure|Event|Observation|Result|Actor|Area):([A-Z][a-zA-Z0-9]*)\\b`",
          "captures": {
            "1": {
              "name": "entity.name.function.artifacts.reference.markdown"
            },
            "2": {
              "name": "entity.name.function.artifacts.reference.markdown"
            }
          }
        }
      ]
    },
    "artifacts-code-blocks": {
      "patterns": [
        {
          "name": "markup.raw.code.artifacts",
          "comment": "Artifacts YAML Code Blocks",
          "begin": "^```\\s*(artifacts|sop|yaml)\\s*$",
          "end": "^```\\s*$",
          "contentName": "source.artifacts.yaml",
          "patterns": [
            {
              "include": "source.artifacts.yaml"
            }
          ]
        },
        {
          "name": "markup.raw.code.artifacts",
          "comment": "Artifacts JSON Code Blocks",
          "begin": "^```\\s*(artifacts|json)\\s*$",
          "end": "^```\\s*$",
          "contentName": "source.json",
          "patterns": [
            {
              "include": "source.json"
            }
          ]
        }
      ]
    },
    "artifacts-inline-references": {
      "patterns": [
        {
          "name": "keyword.control.artifacts.artifact.markdown",
          "comment": "Artifacts Inline References",
          "match": "\\b(Intent|Context|Authority|Evaluation|Vision|Policy|Concept|Principle|Guideline|Indicator|Process|Procedure|Event|Observation|Result|Actor|Area):([A-Z][a-zA-Z0-9]*)\\b",
          "captures": {
            "1": {
              "name": "entity.name.function.artifacts.reference.markdown"
            },
            "2": {
              "name": "entity.name.function.artifacts.reference.markdown"
            }
          }
        }
      ]
    },
    "artifacts-status-indicators": {
      "patterns": [
        {
          "name": "constant.character.artifacts.emoji.markdown",
          "comment": "Artifacts Status Emojis in Markdown",
          "match": "(‚úÖ|‚ùå|‚ö†Ô∏è|üü°|üü¢|üî¥|üîµ|üü†|üü£|‚≠ï|‚ùó|‚ùì)",
          "captures": {
            "1": {
              "name": "constant.character.artifacts.emoji.markdown"
            }
          }
        }
      ]
    }
  }
} 