{
  "name": "artifacts-support",
  "version": "0.0.3-dev",
  "displayName": "Artifacts - Semantic Operations Language Support",
  "description": "Enhanced language support for Semantic Operations Language (.sop, .yml, .mdop) files. Based on the artifacts project: https://github.com/regd25/sol",
  "publisher": "regd25",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/regd25/sol.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "artifacts",
    "semantic",
    "operations",
    "language",
    "yaml",
    "markdown",
    "documentation"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:artifacts.validateSemanticCoherence",
    "onCommand:artifacts.showArtifactTraceability",
    "onCommand:artifacts.generateDocumentation",
    "onCommand:artifacts.formatDocument",
    "onCommand:artifacts.showVisualizer",
    "onCommand:artifacts.createTemplate",
    "onCommand:artifacts.validateReferences",
    "onLanguage:artifacts",
    "onLanguage:artifacts-yaml",
    "onLanguage:artifacts-markdown"
  ],
  "contributes": {
    "repository": {
      "type": "git",
      "url": "https://github.com/regd25/sol.git"
    },
    "bugs": {
      "url": "https://github.com/regd25/sol/issues"
    },
    "homepage": "https://github.com/regd25/sol#readme",
    "commands": [
      {
        "command": "artifacts.validateSemanticCoherence",
        "title": "Artifacts: Validate Semantic Coherence",
        "category": "Artifacts"
      },
      {
        "command": "artifacts.showArtifactTraceability",
        "title": "Artifacts: Show Artifact Traceability",
        "category": "Artifacts"
      },
      {
        "command": "artifacts.generateDocumentation",
        "title": "Artifacts: Generate Documentation",
        "category": "Artifacts"
      },
      {
        "command": "artifacts.formatDocument",
        "title": "Artifacts: Format Document",
        "category": "Artifacts"
      },
      {
        "command": "artifacts.showVisualizer",
        "title": "Artifacts: Show Visual Diagram",
        "category": "Artifacts",
        "icon": "$(graph)"
      },
      {
        "command": "artifacts.createTemplate",
        "title": "Artifacts: Create Template",
        "category": "Artifacts"
      },
      {
        "command": "artifacts.validateReferences",
        "title": "Artifacts: Validate References",
        "category": "Artifacts"
      }
    ],
    "languages": [
      {
        "id": "artifacts",
        "aliases": ["Artifacts", "artifacts"],
        "extensions": [".sop"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "artifacts-yaml",
        "aliases": ["Artifacts YAML", "artifacts-yaml"],
        "extensions": [".yml", ".yaml"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "artifacts-markdown",
        "aliases": ["Artifacts Markdown", "artifacts-markdown"],
        "extensions": [".mdop"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "artifacts",
        "scopeName": "source.artifacts",
        "path": "./syntaxes/artifacts.tmLanguage.json"
      },
      {
        "language": "artifacts-yaml",
        "scopeName": "source.artifacts.yaml",
        "path": "./syntaxes/artifacts-yaml.tmLanguage.json"
      },
      {
        "language": "artifacts-markdown",
        "scopeName": "text.html.markdown.artifacts",
        "path": "./syntaxes/artifacts-markdown.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Artifacts Synth84",
        "uiTheme": "vs-dark",
        "path": "./themes/artifacts-synth84.json"
      }
    ],
    "configuration": {
      "title": "Artifacts",
      "properties": {
        "artifacts.formatting.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Insert spaces instead of tabs"
        },
        "artifacts.formatting.tabSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces per indentation level"
        },
        "artifacts.validation.enableSemanticValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic validation of artifacts references"
        },
        "artifacts.validation.enableSchemaValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable schema validation for artifacts files"
        },
        "artifacts.completion.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable artifacts templates in autocompletion"
        },
        "artifacts.visualization.enableDiagrams": {
          "type": "boolean",
          "default": true,
          "description": "Enable visual diagrams for artifacts"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.sop",
        "url": "./schemas/artifacts-schema.json"
      },
      {
        "fileMatch": "*.yml",
        "url": "./schemas/artifacts-schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  }
}
