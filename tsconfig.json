{
	"compilerOptions": {
		"lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
		"rootDir": "./",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@hexy/domain": ["src/domain/index.ts"],
			"@hexy/infrastructure": ["src/infrastructure/index.ts"],
			"@hexy/application": ["src/application/index.ts"],
			"@hexy": ["src/index.ts"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
	},
	"include": ["src/**/*", "bin/**/*", "examples/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
