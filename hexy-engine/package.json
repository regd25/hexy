{
  "name": "hexy-engine",
  "version": "0.1.0",
  "description": "Semantic Orchestration Language (SOL) execution engine for HEXY platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "validate": "npm run lint && npm run test",
    "prepare": "npm run build",
    "demo": "npx ts-node src/cli/working-demo.ts",
    "demo:basic": "npm test src/domain/entities/demo-day.test.ts",
    "demo:enhanced": "npm test src/domain/entities/enhanced-demo.test.ts",
    "demo:interactive": "npx ts-node src/cli/interactive-demo.ts",
    "demo:coverage": "npm run test:coverage",
    "demo:all": "npm run demo:basic && npm run demo:enhanced && npm run demo:coverage",
    "demo:build": "npm run build && node dist/cli/demo.js",
    "demo:simple": "npx ts-node src/cli/simple-demo.ts",
    "demo:working": "npx ts-node src/cli/working-demo.ts"
  },
  "keywords": [
    "semantic-orchestration",
    "process-engine",
    "domain-driven-design",
    "hexagonal-architecture",
    "typescript",
    "sol"
  ],
  "author": "HEXY Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "apollo-server-express": "^3.12.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "joi": "^17.9.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/prefer-readonly": "error"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hexy-platform/hexy-engine.git"
  },
  "bugs": {
    "url": "https://github.com/hexy-platform/hexy-engine/issues"
  },
  "homepage": "https://github.com/hexy-platform/hexy-engine#readme",
  "bin": {
    "hexy-demo": "./dist/cli/demo.js"
  }
}
